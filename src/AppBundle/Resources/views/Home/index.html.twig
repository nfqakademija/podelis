                            <button class="btn btn-4" type="submit">Register</button>
                        </form>

                    </div>
                </div>
            </div> -->

        </div>
    </div>

    <!--great cover-->
    <div class="homepage-hero-module jumbotron">
        <div class="video-container">
            <video preload="auto" autoplay loop class="fillWidth" poster="{{ asset('background/Hello-World.jpg') }}">
                <source src="{{ asset('background/Hello-World.mp4') }}" type="video/mp4" />
                <source src="{{ asset('background/Hello-World.webm') }}" type="video/webm" />
                <source src="{{ asset('background/Hello-World.ogg') }}" type="video/ogg" />
            </video>

            <div class="title-container">
                <div class="titleN">PHP knowledge evaluation tests</div>

                <div class="row bungeeS">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 allignCenter">
                        <a href="/" class="btn btn-1 btn-1e boldS">Zend test</a>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 allignCenter">
                        <a href="/" class="btn btn-1 btn-1e  boldS">
                            Overal <br>
                            <span class="font-20">knowledge test</span>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 allignCenter">
                        <a class="btn btn-1 btn-1e boldS formButton">Category test</a>
                    </div>
                </div>

                <div class="allign-center users-count">
                    <h2 class="bungeeS boldS allign-center font-40">Over</h2>
                        <div class="circle allignCenter">
                            <div class="user-count font-50">0</div>
                        </div>

                    <h2 class="bungeeS boldS allign-center">users! Join us</h2>
                </div>

            </div>
        </div>
    </div>

    <!--categories-->
    <div class="allignCenter formCategories">
        <div class="panel-group">
            <div class="panel panel-success">
                <div class="panel-heading"><p class="titleN">Test categories</p></div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3 col-sm-12 col-xs-12">
                            {% for category in categories %}
                                <a href="{{ path('categoryTest',{'id': category.id, 'slug': category.slugify}) }}"><button type="submit" class="btn btnY btn-3">{{ category.title }}</button></a>
                            {% endfor %}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!--secondary content test info-->
    <div class="grey-background">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <h2 class="bungeeS boldS font-20 allignCenter">Learn PHP</h2>
                    <p><a href="http://php.net/docs.php">http://php.net/docs.php</a></p>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 allignCenter">
                    <div class="bungeeS boldS font-20 ">
                        <iframe class="myIframe" width="100%" allowfullscreen frameborder="0"
