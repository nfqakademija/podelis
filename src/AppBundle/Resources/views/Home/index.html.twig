{% extends "::base.html.twig" %}

{% block title %}Home page - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% for error in app.session.flashBag.get('error') %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
    {% endfor %}
    {% for success in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ success }}
        </div>
    {% endfor %}



    <!--login register forms-->
    <div class="container allign-center">
        <div class="row">

             <div class="col-lg-4 col-lg-offset-4 col-sm-12 loginForm">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        Log in
                    </div>
                    <div class="panel-body">
                        <form action="{# path('homepage') #}" method="post" class="form-horizontal">
                            <fieldset class="form-group">
                                <label class="control-label label-width" for="email">Email: </label>
                                <input type="text" id="email" name="_username" value="{# last_email #}" />
                            </fieldset>
                            <fieldset class="form-group">
                                <label class="control-label label-width" for="password">Password: </label>
                                <input type="password" id="password" name="_password" />
                            </fieldset>
                            <button class="btn btn-4" type="submit">Log in</button>
                        </form>

                    </div>
                    <div class="panel-footer">
                        <div class="text-center"><b><a href="{# path('fbConnect') #}">Login with Facebook</a></b></div>
                    </div>
                </div>
            </div> 

