<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{{ "PHP tests" }}{% endblock %}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico')}}">
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,900" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Bungee+Hairline" rel="stylesheet">
        <link href="http://fonts.googleapis.com/css?family=Raleway:400,700" rel="stylesheet" />
        <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
    {% endblock %}
    {% block canonical_meta %}{% endblock %}
</head>
<body>
<div class="container-fluid">
    {% block container %}
        {% block header %}
            {% include "::inc/header.html.twig" %}
        {% endblock %}
    {% endblock %}
</div>
<div class="container">
    {% for error in app.session.flashBag.get('error') %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
    {% endfor %}
    {% for success in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ success }}
        </div>
    {% endfor %}
    {% for alert in app.session.flashBag.get('alert') %}
        <div class="alert alert-warning">
            {{ alert }}
        </div>
    {% endfor %}
</div>

{% block body %}{% endblock %}
{% block footer %}
{% include "::inc/footer.html.twig" %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}
</body>
</html>